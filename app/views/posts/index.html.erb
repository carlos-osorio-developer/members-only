<p id="notice" class="alert alert-primary"><%= notice %></p>

<h1 class = "container">Posts</h1>

<table class="table container table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <% if current_user %>
          <td><%= post.user.name %>        
        <% else %>
          <td><%= link_to 'Please log in', new_user_session_path %></td>
        <% end %>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-outline-success ms-5' %>
