<p id="notice" class="alert alert-primary"><%= notice %></p>

<h1 class = "container">Users</h1>

<table class="table container table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>        
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_registration_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn-group mx-4 mb-4" role="group" aria-label="Basic example">
<%= link_to 'New User', new_user_registration_path, class: 'btn btn-success' %>
<% if current_user %>
<%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
<% end %>
</div>